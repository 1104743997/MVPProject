<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/v"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_top"
        android:background="@color/white" />

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/v"
        android:background="@color/white">

       <ImageView
           android:id="@+id/back"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/icon_back_black"
           android:layout_centerVertical="true"
           android:padding="@dimen/mar_15"
           />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="详细练习"
            android:textSize="18sp" />


    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_head"
        android:background="#337c7c7c" />

    <RelativeLayout
        android:id="@+id/rl_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorExerciseBg"
        android:layout_marginTop="48dp"
        android:padding="@dimen/mar_25"
        >

        <TextView
            android:id="@+id/tv_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="apple"
            android:textSize="30sp"
            />

        <TextView
            android:id="@+id/tv_word_ex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_word"
            android:layout_marginTop="@dimen/mar_24"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/white"
            android:text="n.苹果;苹果公司；苹果树\n词汇难度：高考/考研\n复数形式.apples"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_sentence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorExerciseBg"
        android:layout_marginTop="48dp"
        android:padding="@dimen/mar_25"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/tv_sentence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/mar_3"
            android:layout_marginLeft="@dimen/mar_15"
            android:layout_marginRight="@dimen/mar_15"
            android:layout_centerHorizontal="true"
            android:text="Did you go to class today?"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/tv_sentence_ex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_sentence"
            android:layout_marginTop="@dimen/mar_15"
            android:layout_marginLeft="@dimen/mar_15"
            android:layout_marginRight="@dimen/mar_15"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/white"
            android:text="你今天去上课了吗？"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_count"
        android:layout_width="@dimen/mar_20"
        android:layout_height="@dimen/mar_20"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="@dimen/mar_15"
        />

    <LinearLayout
        android:layout_marginTop="@dimen/mar_15"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/mar_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/play_voice"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mar_25"
            android:paddingLeft="@dimen/mar_5"
            android:paddingRight="@dimen/mar_5"
            android:src="@drawable/icon_play_voice"
            />

        <ImageView
            android:id="@+id/record_voice"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mar_25"
            android:paddingLeft="@dimen/mar_5"
            android:paddingRight="@dimen/mar_5"
            android:layout_marginLeft="@dimen/mar_5"
            android:layout_marginRight="@dimen/mar_5"
            android:src="@drawable/icon_record_default"
            />


        <ImageView
            android:id="@+id/share_voice"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mar_25"
            android:paddingLeft="@dimen/mar_5"
            android:paddingRight="@dimen/mar_5"
            android:src="@drawable/icon_share"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/mar_5"
        android:layout_marginBottom="25dp"
        android:text="00:00:00"
        android:textSize="14sp" />
</LinearLayout>