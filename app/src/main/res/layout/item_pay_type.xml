<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/mar_5"
    android:paddingRight="@dimen/mar_5"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/mar_10">


        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/mar_25"
            android:layout_height="@dimen/mar_25"
            android:src="@drawable/icon_alipay"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_toRightOf="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/mar_15"
            android:paddingBottom="@dimen/mar_15"
            android:layout_marginLeft="@dimen/mar_5"
            android:text="支付宝"
            />

        <ImageView
            android:id="@+id/iv_choose"
            android:layout_width="@dimen/mar_25"
            android:layout_height="@dimen/mar_25"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_select"
            />
    </RelativeLayout>
</RelativeLayout>