<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="@dimen/mar_10"
    android:paddingRight="@dimen/mar_10"
    android:paddingTop="@dimen/mar_5">

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/click_button_bg_white"
        android:paddingBottom="@dimen/mar_5"
        android:paddingLeft="@dimen/mar_10"
        android:paddingRight="@dimen/mar_10"
        android:paddingTop="@dimen/mar_5">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_toLeftOf="@+id/tv_amount"
            tools:text="托福必考600词" />

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_toLeftOf="@+id/tv_amount"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="10dp"
            tools:text="华尔街英语"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            tools:text="免费"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/text_size_13sp" />
    </RelativeLayout>
</RelativeLayout>