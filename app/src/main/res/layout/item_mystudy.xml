<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="@dimen/mar_10"
    android:paddingRight="@dimen/mar_10"
    android:paddingTop="@dimen/mar_5">

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/click_button_bg_white"
        android:paddingBottom="@dimen/mar_5"
        android:paddingLeft="@dimen/mar_10"
        android:paddingRight="@dimen/mar_10"
        android:paddingTop="@dimen/mar_5">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv"
            android:maxLines="1"
            tools:text="你不知道的图片英语" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv"
            tools:text="免费"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/text_size_13sp" />

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/iv"
            android:layout_alignBottom="@+id/iv">

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="5dp"
                android:maxLines="1"

                tools:text="大唐英语" />

            <TextView
                android:id="@+id/status"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/colorBannerGreen"
                android:layout_alignParentRight="true"
                tools:text="学习中"/>

        </RelativeLayout>



    </RelativeLayout>
</RelativeLayout>